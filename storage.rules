rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Logos de entidades
    match /logos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Archivos adjuntos de casos de uso
    match /attachments/{entityId}/{useCaseId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
